<div>
  <h1>Welcome to the Foods Page</h1>
  <div>
    <%= link_to 'Add Food', new_user_food_path(current_user.id) %>
  </div>

  <table>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% Food.all.each do |food| %>
          <tr>
              <th scope="row"><%= food.id %></th>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td>$ <%= food.price %></td>
              <td>
              <% if can? :manage, food %>
              <%= button_to "Delete", user_food_path(current_user.id, food.id), data: {turbo: false}, method: :delete %>
              <% end %>
              </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Link to the food.css file -->
<%= stylesheet_link_tag 'food' %>
